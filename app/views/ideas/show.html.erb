<div class='idea-box'>
<link rel="stylesheet" href="/ideas/show.css" title="CSS" type="text/css"/>
<center><h1><%= @idea.title %></center></h1>

<p class='content'>
  <%= @idea.content %>
</p>
  <%= link_to 'Edit', edit_user_idea_path(@user, @idea) %>
  <%= link_to 'Add Image', images_path(:idea_id => @idea.id)%>
  <%= link_to 'Delete', user_idea_path(@user, @idea), method: :delete %>
  <br>
  <%@images.each do |i| %>
  <center><div class='images' ><img src="<%=i.url%>"></div>
  <%end%>
</div>
